+    #[instrument(skip_all, err)]
+    pub async fn on_connect<G: GameState>(
+        ws: axum::extract::WebSocketUpgrade,
+        State(game_state): State<G>,
+        GameCode { code }: GameCode,
+    ) -> Result<Response, InternalServerError> {
+        Ok(ws
